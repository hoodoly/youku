<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    
    <!-- 提供方应用名称信息，这个相当于起一个名字，我们dubbo管理页面比较清晰是哪个应用暴露出来的 -->
    <dubbo:application name="web"></dubbo:application>

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry id="central" address="zookeeper://127.0.0.1:2181" protocol="zookeeper"/>

    <dubbo:consumer timeout="5000"/>

    <dubbo:reference registry="central" retries="0" timeout="5000" interface="com.app.user.service.UserReadService" id="userReadService"/>

    <context:component-scan base-package="com.app"/>
</beans>